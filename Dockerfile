###############################################################################################################
# Description: HTTP proxy server with Prometheus metrics
###############################################################################################################

# Main
#**************************************************************************************************************
FROM python:3.8.0

RUN pip install --upgrade pip
RUN pip3 install prometheus_client

COPY prom-http-proxy /usr/local/bin

RUN  chmod +x /usr/local/bin/prom-http-proxy

CMD ["python3", "/usr/local/bin/prom-http-proxy"]
#**************************************************************************************************************
