###############################################################################################################
# Description: Example Flask API REST
###############################################################################################################

# Main
#**************************************************************************************************************
FROM python:3.8.0

ENV FLASK_ENV=development

RUN pip install --upgrade pip && pip3 install flask

COPY example-flask /usr/local/bin

RUN  chmod +x /usr/local/bin/example-flask

CMD ["python3", "/usr/local/bin/example-flask"]
#**************************************************************************************************************
